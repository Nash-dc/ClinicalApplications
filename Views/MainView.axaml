<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:ClinicalApplications.ViewModels"
    x:Class="ClinicalApplications.Views.MainView"
    x:DataType="vm:MainViewViewModel">

  <Grid RowDefinitions="Auto,Auto,*" Margin="16" ColumnDefinitions="*,Auto">
    <TextBox Grid.Row="0" Grid.ColumnSpan="2"
             Text="{Binding Prompt, Mode=TwoWay}"
             Watermark="Type your prompt here..."
             MinWidth="400" Margin="0,0,0,8"/>

    <Button Grid.Row="1" Grid.Column="1"
            Content="Send to GPT"
            Command="{Binding SendRequestCommand}"
            HorizontalAlignment="Right" Margin="8,0,0,8"/>

    <TextBox Grid.Row="2" Grid.ColumnSpan="2"
             Text="{Binding Reply}"
             AcceptsReturn="True"
             IsReadOnly="True"
             TextWrapping="Wrap"
             MinHeight="200"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
  </Grid>
</UserControl>
